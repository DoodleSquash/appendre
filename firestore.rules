rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(ownerUid) {
      return isSignedIn() && request.auth.uid == ownerUid;
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    match /quizzes/{quizId} {
      allow read: if resource.data.is_public == true || isOwner(resource.data.ownerUid);
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isOwner(resource.data.ownerUid);

      match /questions/{questionId} {
        allow read: if get(/databases/$(database)/documents/quizzes/$(quizId)).data.is_public == true
          || isOwner(get(/databases/$(database)/documents/quizzes/$(quizId)).data.ownerUid);
        allow create, update, delete: if isOwner(get(/databases/$(database)/documents/quizzes/$(quizId)).data.ownerUid);
      }
    }

    match /sessions/{sessionId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.host_uid);

      match /players/{playerId} {
        allow read: if true;
        allow create, update: if isSignedIn();
      }
    }

    match /results/{resultId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}




